<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="owl_playground.card" owl="1">
        <div class="card mt-2" style="width: 18rem; justify-content: center;">
            <img src="/owl_playground/static/src/images/task.jpeg" class="card-img-top" alt="Task image"/>
            <div class="card-body">
                <t t-if="props.slots.title">
                    <h5 class="card-title">
                        <t t-slot="title"/>
                    </h5>
                </t>
                <p class="card-text">
                    <t t-slot="default"/>
                </p>

            </div>
        </div>
    </t>
</templates>